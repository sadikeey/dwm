#include <stdio.h>
// x^3-4x-9
float f(float x)
{
    return (x * x * x - 4 * x - 9);
}
void main()
{
    float x1 = 2, x2 = 3, x3, z;
    float y = 0.00001;
    int i = 1;
    do
    {
        printf("\nIteration %d\n", i);
        x3 = (x1 + x2) / 2;
        printf("Approx Value of x%d = %f\n", i, x3);
        z = f(x3);
        if (z > 0)
            x2 = x3;
        else
            x1 = x3;
        i++;
    } while (fabs(x1 - x2) >= y);
}
